{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "./",
    "paths": {
      "@near/*": ["node_modules/near-api-js/types/*"],
    },
    "allowSyntheticDefaultImports": true
  },
    "types": ["node"],

  "include": ["src/**/*.ts", "src/index.ts"]
}
